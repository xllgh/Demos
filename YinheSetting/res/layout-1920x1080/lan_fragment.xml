<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/linear_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:ems="9"
            android:text="@string/ip_address" />

        <com.yinhe.iptvsetting.view.AddressInput
            android:id="@+id/et_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:nextFocusLeft="@+id/et_ip_address"
            android:nextFocusRight="@+id/et_ip_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/linear_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:ems="9"
            android:text="@string/netmask" />

        <com.yinhe.iptvsetting.view.AddressInput
            android:id="@+id/et_netmask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/linear_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:ems="9"
            android:text="@string/default_gateway" />

        <com.yinhe.iptvsetting.view.AddressInput
            android:id="@+id/et_default_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/linear_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:ems="9"
            android:text="@string/DNS_apache" />

        <com.yinhe.iptvsetting.view.AddressInput
            android:id="@+id/et_DNS_apache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_sure"
            style="@style/btn_confirm"
            android:layout_width="110dip"
            android:layout_height="35dip"
            android:background="@drawable/button_sure_cancle"
            android:nextFocusDown="@+id/tv_LAN"
            android:nextFocusLeft="@+id/tv_LAN"
            android:text="@string/sure" />

        <Button
            android:id="@+id/bt_cancle"
            style="@style/btn_confirm"
            android:layout_width="110dip"
            android:layout_height="35dip"
            android:layout_marginLeft="153dip"
            android:background="@drawable/button_sure_cancle"
            android:nextFocusDown="@+id/tv_LAN"
            android:nextFocusRight="@+id/tv_LAN"
            android:text="@string/cancle" />
    </LinearLayout>

</LinearLayout>