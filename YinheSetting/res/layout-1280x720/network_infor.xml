<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ipvt_bg"
    tools:context=".MainActivity" >

    <include layout="@layout/logo" />

    <TextView
        android:id="@+id/tv_path"
        style="@style/txt_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dip"
        android:layout_marginTop="120dip"
        android:contentDescription="@null"
        android:drawableLeft="@drawable/arrow_left"
        android:drawablePadding="20dip"
        android:text="@string/network_info" />

    <LinearLayout
        android:layout_width="825dip"
        android:layout_height="426dip"
        android:layout_below="@id/tv_path"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dip"
        android:background="@drawable/itv_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dip"
                android:ems="5"
                android:text="@string/network_type" />

            <TextView
                android:id="@+id/tv_network_type"
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/router_test" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dip"
                android:ems="5"
                android:text="@string/network_state" />

            <TextView
                android:id="@+id/tv_network_state"
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/router_test" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dip"
                android:ems="5"
                android:text="@string/ip_address" />

            <TextView
                android:id="@+id/tv_ip_address"
                style="@style/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/router_test" />
        </LinearLayout>
        
        <Button
            android:id="@+id/bt_ensure"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginTop="50dip"
            android:background="@drawable/button_update"
            android:text="@string/test"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>